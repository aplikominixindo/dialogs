<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="6dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:text="Android Dialogs"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_margin="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnAlertDialog"
        android:text="Alert Dialog"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#123def"
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnConfirmMultipleDialog"
        android:text="Confirm Dialog - Multiple"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#123def"
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnConfirmSingleDialog"
        android:text="Confirm Dialog - Single"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#123def"
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnListViewDialog"
        android:text="List View Dialog"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#123def"
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnEditTextDialog"
        android:text="Edit Text Dialog"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#123def"
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnWebViewDialog"
        android:text="Web View Dialog"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#123def"
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnDatePickerDialog"
        android:text="Date Picker Dialog"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#123def"
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnTimePickerDialog"
        android:text="Time Picker Dialog"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#123def"
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>